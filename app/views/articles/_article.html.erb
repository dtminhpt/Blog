<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= article.title %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      </div>
      <div class="card-block">
        <h5 class="card-title">Comments</h5>
        <ul>
          <% article.comments.each do |comment| %>
            <li><%= comment.content %></li>
          <% end %>
        </ul>
        <%= form_for article.comments.new, html: {class: "form-inline"} do |f| %>
          <%= f.hidden_field :article_id %>
          <%= f.text_field :content, class: "form-control", placeholder: "Comment content" %>
          <button class="btn btn-success-outline" type="submit">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
